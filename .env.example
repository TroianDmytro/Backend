#.env.example
# ====================================
# NestJS Backend - Production Config
# ====================================

# Приложение
NODE_ENV=production
PORT=8000
APP_URL=http://localhost:8000

# CORS (разделение запятыми)
CORS_ORIGINS=https://your-frontend.com,https://admin.your-domain.com # TODO

# MongoDB (пароль берется из Docker Secret)
MONGODB_HOST=your-mongo-server.com
MONGODB_PORT=27017
MONGODB_USER=nestjs_user
MONGODB_DATABASE=nestjs_production

# Email настройки (пароль берется из Docker Secret)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=test.dpoff@gmail.com
EMAIL_FROM=test.dpoff@gmail.com

# JWT (секрет берется из Docker Secret)
JWT_EXPIRES_IN=12h

# Файлы и загрузки
MAX_FILE_SIZE_MB=10
UPLOAD_DESTINATION=./uploads

# ====================================
# СЕКРЕТЫ
# ====================================
# Эти значения берутся из Docker Secrets:
# - MONGODB_PASSWORD (из секрета mongodb_password)
# - JWT_SECRET (из секрета jwt_secret)  
# - EMAIL_PASSWORD (из секрета email_password)